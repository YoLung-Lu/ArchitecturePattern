<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/article_category"
        android:layout_width="@dimen/category_width"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="問卦"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/article_push"
        app:layout_constraintRight_toLeftOf="@+id/guide_between_category_title"
/>

<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/article_push"
        android:layout_width="@dimen/category_width"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="爆"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guide_between_category_title"
/>

<androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_between_category_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/category_width"/>

<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/article_title"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="title"
        app:layout_constraintLeft_toRightOf="@id/guide_between_category_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/article_id"
        app:layout_constraintRight_toRightOf="parent"
/>

<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/article_id"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        android:text="id"
        app:layout_constraintLeft_toRightOf="@id/guide_between_category_title"
        app:layout_constraintTop_toBottomOf="@id/article_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/article_author"
/>

<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/article_author"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        android:text="author"
        app:layout_constraintLeft_toRightOf="@id/article_id"
        app:layout_constraintTop_toBottomOf="@id/article_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/article_time"
/>

<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/article_time"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textAlignment="viewEnd"
        android:textSize="12sp"
        android:text="time"
        app:layout_constraintTop_toBottomOf="@id/article_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
/>


</androidx.constraintlayout.widget.ConstraintLayout>